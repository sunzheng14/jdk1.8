
public class TestMain {

	public static void main(String[] args) {
		TestMain tm = new TestMain();
		//tm.byteTest();
		tm.xiaHuaXian();
	}
	
	/**
	 * 二进制来表示整数
	 */
	public void byteTest(){
		int a = 0b001000;
		int b = 0b001000;
		System.out.println(a + b);
	}
	
	/**
	 * 数字字面量可以出现下划线
	 */
	public void xiaHuaXian(){
	    int a = 10_00;  
	    byte c = 0b0001_1000;
	    System.out.println(a + c);
	}
	
	

}
